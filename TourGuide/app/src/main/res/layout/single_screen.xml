<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/single_screen"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.udacity.tourguide.TourGuide"
        tools:showIn="@layout/app_bar_tour_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/photo"
            android:src="@drawable/paradise_beach_club"
            android:layout_height="200dp"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo"
            android:paddingTop="8dp">
            <ImageView
                android:src="@drawable/ic_restaurant_black_24dp"
                style="@style/IconFormat"/>
            <TextView
                android:text="@string/name_club"
                style="@style/TextFormat"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:paddingTop="8dp">
            <ImageView
                android:src="@drawable/ic_place_black_24dp"
                style="@style/IconFormat"/>
            <TextView
                android:text="@string/address"
                style="@style/TextFormat"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_place"
            android:paddingTop="8dp">
            <ImageView
                android:src="@drawable/ic_local_phone_black_24dp"
                style="@style/IconFormat"/>
            <TextView
                android:text="@string/phone_number"
                style="@style/TextFormat"
                android:autoLink="phone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_phone"
            android:paddingTop="8dp">
            <ImageView
                android:src="@drawable/ic_mail_black_24dp"
                style="@style/IconFormat"/>
            <TextView
                android:text="@string/email"
                style="@style/TextFormat"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_email"
            android:paddingTop="8dp">
            <ImageView
                android:src="@drawable/ic_info_black_24dp"
                style="@style/IconFormat"/>
            <TextView
                android:text="@string/club_info"
                style="@style/TextFormat"/>
        </LinearLayout>
    </RelativeLayout>
